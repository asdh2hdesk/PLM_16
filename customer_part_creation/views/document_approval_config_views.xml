<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_document_approval_config_form" model="ir.ui.view">
        <field name="name">document.approval.config.form</field>
        <field name="model">document.approval.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="approver_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_document_approval_config_tree" model="ir.ui.view">
        <field name="name">document.approval.config.tree</field>
        <field name="model">document.approval.config</field>
        <field name="arch" type="xml">
            <tree editable="bottom" >
                <field name="approver_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>


    <record id="action_document_approval_config" model="ir.actions.act_window">
        <field name="name">Approval Configuration</field>
        <field name="res_model">document.approval.config</field>
        <field name="view_mode">tree</field>
        <!-- <field name="target">current</field> -->
    </record>

    <menuitem id="menu_document_approval_config" name="Approval Configuration"
        parent="customer_part_creation.menu_document_control_root"
        action="action_document_approval_config"/>

</odoo>