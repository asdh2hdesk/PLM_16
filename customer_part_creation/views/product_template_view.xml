<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_cpc" model="ir.ui.view">
        <field name="name">product.template.form.inherit.cpc</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Hide Sales page -->
            <xpath expr="//page[@name='sales']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- Hide Purchase page -->
            <xpath expr="//page[@name='purchase']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//page[@name='inventory']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>
    <record id="view_product_product_form_custom_inherit" model="ir.ui.view">
        <field name="name">product.product.form.custom.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">

            <!-- Hide Extra Prices button -->
            <xpath expr="//button[@name='open_pricelist_rules']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="product_product_template_form_view_custom" model="ir.ui.view">
        <field name="name">product.template.custom.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <!-- Hide sale_ok and purchase_ok checkboxes -->
            <xpath expr="//div[@name='options']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- Hide General Information tab -->
            <xpath expr="//page[@name='general_information']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

