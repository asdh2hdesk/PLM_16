<odoo>
    <data noupdate="1">

        <!-- Module Category -->
        <record id="module_category_vendor_document" model="ir.module.category">
            <field name="name">Vendor Documents</field>
            <field name="sequence">20</field>
        </record>

        <!-- Security Groups -->
        <record id="group_vendor_document_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_vendor_document"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_vendor_document_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_vendor_document"/>
            <field name="implied_ids" eval="[(4, ref('group_vendor_document_user'))]"/>
        </record>

        <record id="group_vendor_document_approver" model="res.groups">
            <field name="name">Approver</field>
            <field name="category_id" ref="module_category_vendor_document"/>
            <field name="implied_ids" eval="[(4, ref('group_vendor_document_user'))]"/>
        </record>

        <!-- Record Rules for Vendor Document -->

        <!-- Users can see all documents -->
        <record id="vendor_document_user_rule" model="ir.rule">
            <field name="name">Vendor Document: Users can see all</field>
            <field name="model_id" ref="model_vendor_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_vendor_document_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Managers can do everything -->
        <record id="vendor_document_manager_rule" model="ir.rule">
            <field name="name">Vendor Document: Managers full access</field>
            <field name="model_id" ref="model_vendor_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_vendor_document_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for Vendor Document Line -->

        <!-- Users can see all document lines -->
        <record id="vendor_document_line_user_rule" model="ir.rule">
            <field name="name">Vendor Document Line: Users can see all</field>
            <field name="model_id" ref="model_vendor_document_line"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_vendor_document_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Managers can do everything on document lines -->
        <record id="vendor_document_line_manager_rule" model="ir.rule">
            <field name="name">Vendor Document Line: Managers full access</field>
            <field name="model_id" ref="model_vendor_document_line"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_vendor_document_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for Individual Approvals -->

        <!-- Users can see their own approvals -->
        <record id="vendor_document_approval_user_own_rule" model="ir.rule">
            <field name="name">Vendor Document Approval: Users see own approvals</field>
            <field name="model_id" ref="model_vendor_document_approval"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_vendor_document_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Approvers can create their own approvals -->
        <record id="vendor_document_approval_approver_create_rule" model="ir.rule">
            <field name="name">Vendor Document Approval: Approvers create own</field>
            <field name="model_id" ref="model_vendor_document_approval"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_vendor_document_approver'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Managers can see all approvals -->
        <record id="vendor_document_approval_manager_rule" model="ir.rule">
            <field name="name">Vendor Document Approval: Managers see all</field>
            <field name="model_id" ref="model_vendor_document_approval"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_vendor_document_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>