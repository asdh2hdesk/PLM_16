<odoo>
    <data>
        <!-- Tree View -->
        <record id="vendor_document_tree_view" model="ir.ui.view">
            <field name="name">vendor.document.tree</field>
            <field name="model">vendor.document</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
<!--                    <field name="vendor_id"/>-->
                    <field name="submission_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="vendor_document_form_view" model="ir.ui.view">
            <field name="name">vendor.document.form</field>
            <field name="model">vendor.document</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_quality_review" string="Move to Quality Review"
                                type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'submitted')]}"/>
                        <button name="action_approval" string="Move to Approval"
                                type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'quality_review')]}"/>
                        <button name="action_integrate" string="Integrate into Project"
                                type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'approval')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
<!--                                <field name="vendor_id"/>-->
                            </group>
                            <group>
                                <field name="submission_date"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Documents">
                                <field name="document_line_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="sr_no_1"/>
                                        <field name="document_format"/>
                                        <field name="attachment_file" filename="attachment_filename"/>
                                        <field name="attachment_filename" invisible="1"/>
                                        <field name="approver_id"/>
                                        <field name="approval_status"/>
                                        <field name="approval_date"/>
                                        <field name="remarks"/>
                                    </tree>
                                </field>
                            </page>
<!--                            <page string="Notes">-->
<!--                                <group>-->
<!--                                    <field name="notes" placeholder="Add notes here..." nolabel="1"/>-->
<!--                                </group>-->
<!--                            </page>-->
                        </notebook>
                    </sheet>
<!--                    <div class="oe_chatter">-->
<!--                        <field name="message_follower_ids"/>-->
<!--                        <field name="activity_ids"/>-->
<!--                        <field name="message_ids"/>-->
<!--                    </div>-->
                </form>
            </field>
        </record>

        <!-- Document Line Tree View (optional standalone view) -->
        <record id="vendor_document_line_tree_view" model="ir.ui.view">
            <field name="name">vendor.document.line.tree</field>
            <field name="model">vendor.document.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence"/>
                    <field name="sr_no_1"/>
                    <field name="document_id"/>
                    <field name="document_format"/>
                    <field name="approver_id"/>
                    <field name="approval_status"/>
                    <field name="approval_date"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="vendor_document_action" model="ir.actions.act_window">
            <field name="name">Vendor Documents</field>
            <field name="res_model">vendor.document</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="vendor_document_menu_root" name="Vendor Documents" sequence="10"/>
        <menuitem id="vendor_document_menu" name="Vendor Documents"
                  parent="vendor_document_menu_root"
                  action="vendor_document_action" sequence="10"/>
    </data>
</odoo>