    <!-- Smart buttons for documents using the mixin -->
    <template id="revision_smart_buttons">
        <div class="oe_button_box" name="button_box">
            <button name="action_view_revisions"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-history"
                    attrs="{'invisible': [('total_revisions', '=', 0)]}">
                <field name="total_revisions" widget="statinfo" string="Revisions"/>
            </button>
        </div>
