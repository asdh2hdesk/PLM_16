<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Main Action -->
    <record id="action_part_version_diff" model="ir.actions.act_window">
        <field name="name">Part Version Comparisons</field>
        <field name="res_model">part.version.diff</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_comparisons': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Compare two parts to see differences
            </p>
            <p>
                Click Create to compare BOMs, documents, revisions, and files between two part numbers.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_manufacturing_version_diff" name="Part Comparison" parent="customer_part_creation.menu_document_control_root" sequence="100"/>

    <menuitem id="menu_part_version_diff"
              name="Version Comparisons"
              parent="menu_manufacturing_version_diff"
              action="action_part_version_diff"
              sequence="10"/>

</odoo>